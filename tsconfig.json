{
	"include": ["**/*"],
	"compilerOptions": {
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"target": "es2016",
		"module": "commonjs",
		"lib": [
			"es2016",
			"dom",
		],
		"strict": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
	}
}